---
import { Container, FeatureCard } from '@littlesticks/odyssey-theme-components';

import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<div>
	<HomeHeroSection />

	<Container>
		<section class="feature-card__section">
			<h2>Prototype</h2>
			<p>Click spacebar to continue through the prototype.</p>
			<iframe
				src="https://www.figma.com/embed?embed_host=share&url=https%3A%2F%2Fwww.figma.com%2Fproto%2FwNZUXlCBj1Yjs0vEW7zdPA%2FDesign-File%3Fpage-id%3D1%253A4%26node-id%3D457%253A27742%26viewport%3D949%252C2065%252C0.23%26scaling%3Dscale-down%26starting-point-node-id%3D457%253A27738%26show-proto-sidebar%3D1&hide-ui=1"
				height="500"
				width="1600"
				frameborder="0"
				allowtransparency="true"
				allowfullscreen="allowfullscreen"></iframe>
			<!-- <div class="feature-card__grid">
				<FeatureCard
					href="/theme/get-started"
					imgSrc="/assets/images/home/screenshots/get-started"
					title="Get Started"
				/>
				<FeatureCard
					href="/theme/style-guide"
					imgSrc="/assets/images/home/screenshots/style-guide"
					title="Style Guide"
				/>
			</div> -->
		</section>
	</Container>
</div>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
